export function openReferatModal(referatText) {
  const content = document.getElementById("referat-content");

  const formatted = referatText
    .trim()
    .split(/\n\s*\n/) // Delar i stycken
    .map(p => `<p>${p.trim().replace(/\n/g, "<br>")}</p>`)
    .join("");

  content.innerHTML = formatted;
  document.getElementById("referat-modal").classList.remove("hidden");
}









